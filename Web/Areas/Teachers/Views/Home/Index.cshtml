@model IEnumerable<Models.Teacher>

@{
    ViewData["Title"] = "Index";
}

<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap.min.css" rel="stylesheet"/>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-striped" id="tblStudent">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
        </table>
    </div>
</div>

@section scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            bindDatatable();
        });

        function bindDatatable() {
            $('#tblStudent')
                .DataTable({
                    sAjaxSource: "/Teachers/GetTableData",
                    bServerSide: true,
                    bProcessing: true,
                    bSearchable: true,
                    language: {
                        emptyTable: "No record found.",
                        processing:
                            '<i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color:#2a2b2b;"></i><span class="sr-only">Loading...</span> '
                    },
                    columnDefs: [
                        {
                            orderable: false,
                            targets: 2,
                            "render": function (_, type, data) {
                                return `<button type="submit" class="btn btn-info btn-sm" onclick="window.location.href='/Teachers/Home/Edit/${data.id}'" value='${data.id}'>
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Edit
                                        </button>
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="window.location.href='/Teachers/Home/Delete/${data.id}'" value='${data.id}'>
                                            <i class="fas fa-trash">
                                            </i>
                                            Delete
                                        </button>`;
                            }
                        }
                    ],
                    columns: [
                        {
                            data: "name",
                            autoWidth: true,
                            searchable: true,
                            order: 'asc'
                        },
                        {
                            data: "email",
                            autoWidth: true,
                            searchable: true
                        },
                    ]
                });
        }
    </script>
}
